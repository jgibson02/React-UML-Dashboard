@import url(http://fonts.googleapis.com/css?family=Open+Sans:400,300,700,800|Roboto+Slab:400,100,300,700);
/**  Basic Page CSS **/
body {
  font-weight: 400;
  font-size: 2em;
  position: relative;
  font-size: 16px;
  font-family: 'Lato', 'Open Sans', sans-serif;
  display: flex;
  flex-direction: column;
  height: 100vh; }

h1, h2, h3, h4, h5, h6 {
  font-weight: 400;
  margin: 0; }

/**  Header Navigation **/
header {
  box-shadow: 0 0 7px 0px rgba(0, 0, 0, 0.3); }
  header .navbar {
    background-color: red;
    margin-bottom: 0;
    flex-grow: 0;
    margin: 0 30px;
    display: flex;
    align-content: center;
    flex-direction: row;
    background-color: inherit;
    border: none;
    border-radius: 0;
    padding: 10px 0;
    border-bottom: 1px solid rgba(50, 50, 50, 0.15); }
  header .navbar-brand {
    padding: 0;
    height: 100%;
    color: #47525E;
    margin: 0;
    font-size: 1.75em;
    font-weight: 600; }

.main {
  background: #335566;
  /*#596B7F*/
  display: flex;
  flex-direction: row;
  flex-grow: 1;
  align-items: stretch;
  /** Navigation Pane **/
